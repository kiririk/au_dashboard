<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.7.0" method="upgrade">
	<name>audash</name>
	<creationDate>May 2017</creationDate>
	<author>Kirill Noskov</author>
	<authorUrl>https://github.com/kiririk</authorUrl>
	<version>0.9.0</version>
	
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.sql</file>
		</sql>
	</install>

	<files folder="site">
		<filename>index.html</filename>
		<filename>audash.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
	</files>
	
	<languages folder="site/language">
		<language tag="en-GB">en-GB/en-GB.com_audash.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.com_audash.ini</language>
    </languages>

	<administration>
		<menu link='index.php?option=com_audash'>Author Dashboard</menu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>audash.php</filename>
			<filename>controller.php</filename>
			<folder>views</folder>
		</files>
		<languages folder="admin/language">
			<language tag="en-GB">en-GB/en-GB.com_audash.ini</language>
			<language tag="ru-RU">ru-RU/ru-RU.com_audash.ini</language>
		</languages>
	</administration> 
</extension>